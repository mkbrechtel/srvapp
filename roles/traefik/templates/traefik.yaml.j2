# {{ ansible_managed }}

entryPoints:
  web:
    address: ":80"
    http:
      redirections:
        entryPoint:
          to: websecure
          scheme: https
  websecure:
    address: ":443"

providers:
  file:
    directory: /etc/traefik/conf.d
    watch: true

{% if traefik_acme_email %}
certificatesResolvers:
  letsencrypt:
    acme:
      email: {{ traefik_acme_email }}
      storage: /var/lib/traefik/acme.json
      httpChallenge:
        entryPoint: web
{% endif %}

log:
  level: INFO
